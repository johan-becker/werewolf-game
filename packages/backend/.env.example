# Backend Environment Configuration Example
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL="postgresql://werewolf_user:werewolf_password@localhost:5432/werewolf_game"

# Redis Configuration
REDIS_URL="redis://localhost:6379"

# Supabase Configuration
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_ANON_KEY="your-supabase-anon-key"
SUPABASE_SERVICE_KEY="your-supabase-service-role-key"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-here-at-least-32-characters"
JWT_EXPIRES_IN="24h"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-here-at-least-32-characters"
JWT_REFRESH_EXPIRES_IN="7d"

# Server Configuration
NODE_ENV="development"
PORT=3000
WS_PORT=3001
HOST="localhost"

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
SESSION_SECRET="your-super-secret-session-key-here-at-least-32-characters"

# Game Configuration
GAME_CODE_LENGTH=6
MAX_PLAYERS_PER_GAME=20
MIN_PLAYERS_PER_GAME=5
GAME_TIMEOUT_MINUTES=30
CHAT_MESSAGE_RATE_LIMIT=5

# Socket Authentication Configuration
SOCKET_AUTH_TIMEOUT=5000
MAX_CONNECTIONS_PER_IP=10
MAX_CONNECTIONS_PER_USER=3

# CORS Configuration
CORS_ORIGIN="http://localhost:3002"

# Logging Configuration
LOG_LEVEL="info"
LOG_TO_FILE=true