{
  "name": "werewolf-game-monorepo",
  "version": "1.0.0",
  "description": "Online Werewolf Game Full-Stack Application",
  "private": true,
  "workspaces": [
    "packages/frontend",
    "packages/backend",
    "packages/shared"
  ],
  "scripts": {
    "preinstall": "node scripts/check-platform.js",
    "postinstall": "node scripts/verify-lockfile.js",
    "prepare": "node -e \"if (process.env.NODE_ENV !== 'production') { require('husky').install() }\" || true",
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean && rm -rf node_modules",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:build": "docker buildx build --platform linux/amd64 -f packages/frontend/Dockerfile .",
    "docker:test": "docker --version && npm run docker:build || echo '⚠️  Docker not running - start Colima to test locally'",
    "ci:prepare": "node scripts/prepare-ci-lockfile.js || echo '⚠️  Docker not available - CI will handle this'",
    "ci:validate": "node scripts/verify-lockfile.js"
  },
  "devDependencies": {
    "@turbo/gen": "^1.12.4",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "9.1.7",
    "prettier": "^3.1.1",
    "turbo": "^1.12.4",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=10.0.0"
  }
}
